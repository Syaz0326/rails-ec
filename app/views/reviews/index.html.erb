<h1>
  <%= @product.name %>のレビュー
</h1>

<ul>
  <% @reviews.each do |review| %>
    <li>
      <%= review.comment %>,
      <%= review.reviewer_name %>,
      rate: <%= average_score_formatted(review) %>
    </li>
    <ul>
      <% review.review_tags.each do |tag| %>
        <li>
          <%= tag.label %>
        </li>
      <% end %>
    </ul>
  <% end %>
</ul>

<%= form_with(model: @new_review, local: true ) do |f| %>
  <%= f.label :comment, 'コメント' %>
  <%= f.text_area :comment %>

  <%= f.label :reviewer_name, '名前' %>
  <%= f.text_field :reviewer_name %>

  <%= f.label 'タグ' %>
  <div>
    <% @review_tags.each do |tag| %>
      <%= f.check_box tag.name %>
      <%= f.label tag.name, tag.label %>
    <% end %>
  </div>

  <%= f.label :price_score, '価格評価' %>
  <div>
    <% 5.times do |i| %>
      <%= f.radio_button :price_score, i + 1 %>
      <%= f.label :price_score, i + 1 %>
    <% end %>
  </div>

  <%= f.label :design_score, 'デザイン評価' %>
  <div>
    <% 5.times do |i| %>
      <%= f.radio_button :design_score, i + 1 %>
      <%= f.label :design_score, i+1 %>
    <% end %>
  </div>

  <%= f.label :quality_score, '品質評価' %>
  <div>
    <% 5.times do |i| %>
      <%= f.radio_button :quality_score, i + 1 %>
      <%= f.label :quality_score, i+1 %>
    <% end %>
  </div>

  <%= f.submit 'Post Review' %>
<% end %>
