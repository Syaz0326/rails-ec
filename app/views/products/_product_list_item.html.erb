<%= link_to  item_path(item), class: 'list-group-item list-group-item-action' do %>
  <h2>
    <%= item.name %>
  </h2>
  <ul>
    <li>商品id: <%= item.id %></li>
    <li>説明文: <%= item.description %></li>
    <li>メーカー: <%= item.maker.name %></li>
    <li>レビュー数: <%= item.reviews.length %></li>
    <li>評価: <%= total_score_formatted(item.reviews) %></li>
  </ul>
<% end %>

